########################
# OpenAI Configuration
########################
AZURE_OPENAI_RESOURCE=your-openai-resource-name              # e.g., my-openai-resource
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_MODEL=o1                                        # Deployment name of your model
AZURE_OPENAI_MODEL_NAME=o1                                   # Model deployment name again
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-ada-002          # Optional; safe to include
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_TOP_P=1.0
AZURE_OPENAI_MAX_TOKENS=1000
AZURE_OPENAI_STOP_SEQUENCE=
AZURE_OPENAI_SYSTEM_MESSAGE=You are an AI assistant that helps people find information.
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_STREAM=True

########################
# Orchestration Strategy
########################
ORCHESTRATION_STRATEGY=openai_function
CONVERSATION_FLOW=CUSTOM                                     # Chat only, no search

########################
# Auth Settings
########################
AZURE_AUTH_TYPE=keys
USE_KEY_VAULT=false

########################
# CosmosDB Chat History
########################
AZURE_COSMOSDB_ACCOUNT_NAME=your-cosmos-account-name         # e.g., mycosmosdb123
AZURE_COSMOSDB_DATABASE_NAME=your-database-name              # e.g., chatdb
AZURE_COSMOSDB_CONVERSATIONS_CONTAINER_NAME=conversations
AZURE_COSMOSDB_ENABLE_FEEDBACK=true                          # Optional thumbs up/down
DATABASE_TYPE=CosmosDB

########################
# Optional Logging & Monitor
########################
APPLICATIONINSIGHTS_ENABLED=false
LOGLEVEL=INFO
LOGLEVEL_AZURE=WARN
